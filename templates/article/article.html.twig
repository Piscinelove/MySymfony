{% extends 'base.html.twig' %}
{% block title %}
    {{ title }}
{%  endblock %}
{% block body %}
<div class="container">
    {{ dump() }}
    <div class="row">
        <h3 class="center-align">{{ title }}</h3>
    </div>
    <div class="row">
        <p class="right">
            <span>{{ author }}</span>
            <span>{{ date }}</span>
            <span>
                <a href="{{ path('articles_thumbup') }}" class="js-article-link">
                    <i class="material-icons prefix green-text">thumb_up</i>
                </a>
                <span class="js-article-count">5</span>
            </span>
        </p>
    </div>
    <div class="row">
        <div>
            <p>
                {{ article }}
            </p>
        </div>
        <hr/>
    </div>
    <div class="row">
        <h4>Comments ({{ comments|length }})</h4>
        <form>
            <div class="row">
                <div class="input-field col s12">
                    <input id="icon_prefix" type="text" class="validate">
                    <label for="icon_prefix">Your message</label>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <a class="waves-effect waves-light btn right"><i class="material-icons left"></i> send</a>
                </div>
            </div>


        </form>
        <ul class="collection">
            {% for comment in comments %}
                <li class="collection-item">{{ comment }}</li>
            {% endfor %}
        </ul>
    </div>

</div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/article.js') }}"></script>
{% endblock %}