{% extends "base.html.twig" %}
{% block title %}
    {{ title }}
{%  endblock %}
{% block body %}
    <div class="container">
        <h4>Articles ({{ articles|length }})</h4>
        <ul class="collection">
            {% for article in articles %}
                <li class="collection-item"><a href="{{ path('articles_show', {id: 2 }) }}">{{ article }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}